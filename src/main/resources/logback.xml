<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  
  <property name="LOG_PATH" value="D:/sts_ws/temp/logs"/>

  <appender name="ConsoleAppender" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>
        %d{dd-MM-yyyy HH:mm:ss.SSS} %magenta([%thread]) %highlight(%-5level) %logger.%M - %msg%n
      </pattern>
    </encoder>
  </appender>


  <appender name="FileAppender"
            class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>${LOG_PATH}/transaction-service.log</file>
    <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
      <Pattern>
        %d{dd-MM-yyyy HH:mm:ss.SSS} [%thread] %-5level %logger{36}.%M - %msg%n
      </Pattern>
    </encoder>


    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <!-- rollover daily -->
      <fileNamePattern>
        ${LOG_PATH}/transaction-service.%d{dd-MM-yyyy}.log
      </fileNamePattern>
      <maxHistory>10</maxHistory>
      <totalSizeCap>100MB</totalSizeCap>
    </rollingPolicy>

    <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
      <!-- rollover daily & on size-->
      <maxFileSize>10MB</maxFileSize>
      <fileNamePattern>
        ${LOG_PATH}/transaction-service_%d{dd-MM-yyyy}_%i.log
      </fileNamePattern>
      <maxHistory>10</maxHistory>
      <totalSizeCap>100MB</totalSizeCap>
    </rollingPolicy>

    <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
      <fileNamePattern>
        ${LOG_PATH}/transaction-service_%i.log
      </fileNamePattern>
      <minIndex>2</minIndex>
      <maxIndex>3</maxIndex>
    </rollingPolicy>

    <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
      <!-- rollover on size-->
      <maxFileSize>10MB</maxFileSize>
    </triggeringPolicy>

  </appender>

  <root level="info">
    <appender-ref ref="ConsoleAppender"/>
    <appender-ref ref="FileAppender"/>
  </root>

  <logger name="com.sree.banking" additivity="false" level="info">
    <appender-ref ref="ConsoleAppender"/>
    <appender-ref ref="FileAppender"/>
  </logger>

 
</configuration>